@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@{
    Layout = null;
}
<!doctype html>
<html ng-app="project">
<head>
    <title>@Umbraco.Field("pageName")</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/Content/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/style.css" rel="stylesheet">
    <style>
        body
        {
            padding-top: 60px; /* 60px to make the container go all the way to the bottom of the topbar */
        }
    </style>
    <script type="text/javascript">
        var currentUmbracoPageId = @Model.Content.Id;
    </script>

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container">

                <a class="brand" href="#">@Umbraco.Field("pageName")</a>
                <div class="nav-collapse collapse">
                    <ul class="nav">
                        <li><a href="#/new"><i class="icon-edit icon-white"></i>Add</a></li>
                    </ul>
                    
                    <ul class="nav pull-right">
                   
                    <li class="divider-vertical"></li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Resources <b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li><a href="http://umbraco.com" target="_blank">Umbraco</a></li>
                            <li><a href="http://our.umbraco.org/documentation/Reference/WebApi/" target="_blank">Web API in Umbraco</a></li>
                            <li><a href="http://angularjs.org/" target="_blank">AngularJS</a></li>
                        </ul>
                    </li>
                </ul>
                </div>
                <!--/.nav-collapse -->
            </div>
        </div>
    </div>

    <div class="container" ng-view>
    </div>

    <div class="container">
        <footer class="footer">
            @Umbraco.Field("footer")


        </footer>
    </div>

    <script src="~/scripts/angular.min.js"></script>
    <script src="~/scripts/project.js"></script>
    <script src="~/scripts/jquery-2.0.0.min.js"></script>
    <script src="~/scripts/bootstrap.min.js"></script>
</body>
</html>
